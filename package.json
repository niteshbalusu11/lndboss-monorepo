{
  "name": "lndboss",
  "version": "2.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run --parallel build:prod",
    "dev": "lerna run --parallel dev",
    "lint": "eslint \"{packages,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"packages/**/*.ts\" \"tests/**/*.ts\"",
    "start:prod": "lerna run --parallel start:prod",
    "test": "playwright test",
    "test:client": "playwright test tests/client --headed",
    "test:server": "playwright test tests/server"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.2",
    "@types/node": "16.11.41",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-react": "^7.31.8",
    "lerna": "^5.5.1",
    "ln-docker-daemons": "^2.3.6",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
